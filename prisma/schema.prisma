datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Subject {
  id            Int      @default(autoincrement()) @id
  faculty       Faculty? @relation(fields: [facultyId], references: [id])
  facultyId     Int?
  name          String?
  registerSum   Int
  registerAve   Int
  earnSum       Int
  earnAve       Int
  courseNum     Int
}

model Faculty {
  id            Int      @default(autoincrement()) @id
  name          String?
  subjects      Subject[]
}
